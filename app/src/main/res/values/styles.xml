<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RootLayoutStyle">
        <item name="android:background">@color/color_2</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextStyleBig">
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:textColor">@color/color_1_10</item>
        <item name="maxLines">1</item>
    </style>=

    <style name="TextStyleMedium">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/color_1</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextStyleNormal">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/color_1</item>
        <item name="maxLines">1</item>
    </style>

    <style name="VerifyTextStyle">
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:backgroundTint">@color/color_2</item>
        <item name="android:textColor">@color/login_page_numbers_text_color</item>
        <item name="android:background">@drawable/shape_rounded_background</item>
        <item name="maxLines">1</item>
    </style>

</resources>